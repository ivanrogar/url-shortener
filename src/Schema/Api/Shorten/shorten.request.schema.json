{
  "$id": "shorten.request.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "URL shorten request schema",
  "type": "object",
  "required": [
    "url"
  ],
  "properties": {
    "url": {
      "type": "string",
      "pattern": "((http|https)://)(www.)?[a-zA-Z0-9@:%._\\\\+~#?&/=]{2,256}\\\\.[a-z]{2,6}\\\\b([-a-zA-Z0-9@:%._\\\\+~#?&/=]*)"
    }
  }
}
